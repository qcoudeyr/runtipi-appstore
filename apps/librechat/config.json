{
  "$schema": "../schema.json",
  "name": "LibreChat",
  "available": true,
  "port": 8240,
  "exposable": true,
  "force_expose": false,
  "id": "librechat",
  "description": "All-In-One AI Conversations with LibreChat",
  "tipi_version": 1,
  "version": "0.5.8",
  "categories": ["ai"],
  "short_desc": "All-In-One AI Conversations with LibreChat",
  "author": "https://github.com/danny-avila",
  "source": "https://github.com/danny-avila/LibreChat",
  "website": "https://docs.librechat.ai/",
  "form_fields": [
    {
        "type": "password",
        "label": "Mongodb URI",
        "max": 100,
        "min": 1,
        "required": true,
        "env_variable": "MONGO_URI"
    }
    {
        "type": "password",
        "label": "Openai API Key",
        "max": 51,
        "min": 51,
        "required": false,
        "env_variable": "OPENAI_API_KEY"
    },
    {
        "type": "password",
        "label": "Chatgpt Access Token",
        "max": 100,
        "min": 1,
        "required": false,
        "env_variable": "CHATGPT_ACCESS_TOKEN"
    },
    {
        "type": "password",
        "label": "Bing Access Token",
        "max": 100,
        "min": 1,
        "required": false,
        "env_variable": "BING_ACCESS_TOKEN"
    },
    {
        "type": "password",
        "label": "Anthropic Endpoint (Claude)",
        "max": 100,
        "min": 1,
        "required": false,
        "env_variable": "ANTHROPIC_API_KEY"
    },
    {
        "type": "password",
        "label": "Azure OpenAI Key",
        "max": 100,
        "min": 1,
        "required": false,
        "env_variable": "AZURE_API_KEY"
    },
    {
        "type": "text",
        "label": "Azure OpenAI Instance Name",
        "max": 100,
        "min": 1,
        "required": false,
        "env_variable": "AZURE_OPENAI_API_INSTANCE_NAME"
    },
    {
        "type": "text",
        "label": "Azure OpenAI Deployment Name",
        "max": 100,
        "min": 1,
        "required": false,
        "env_variable": "AZURE_OPENAI_API_DEPLOYMENT_NAME"
    },
    {
        "type": "password",
        "label": "Azure OpenAI API Version",
        "max": 100,
        "min": 1,
        "required": false,
        "env_variable": "AZURE_OPENAI_API_VERSION"
    },
    {
        "type": "boolean",
        "label": "PLUGINS_USE_AZURE",
        "required": false,
        "env_variable": "PLUGINS_USE_AZURE"
    }
  ]
}
